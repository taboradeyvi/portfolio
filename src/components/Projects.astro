---

<section class="mt-20 px-4 mx-auto max-w-5xl lg:mt-40" id="projects">
  <div>
    <h1 class="text-balance text-xl font-bold tracking-tight sm:text-3xl">
      RECENT PROJECTS
    </h1>
  </div>
  {
    PROJECTS.map((project) => (
      <div class="flex flex-col lg:grid lg:grid-cols-2 lg:gap-4 my-10">
        <div class="w-full h-[200px] max-h-[280px] lg:h-full lg:max-w-[400px] rounded bg-blue-600"></div>
        <div>
          <h1 class="mt-5 text-xl font-semibold mb-5 lg:mt-0">
            {project.title}
          </h1>
          <p class="text-sm md:text-base">{project.description}</p>
          <div class="mt-5">
            <div class="grid grid-cols-2 md:flex gap-2 md:gap-4">
              {project.stack.map((item) => (
                <div class="flex gap-2 bg-blue-400 rounded-md px-2 py-1 items-center">
                  <item.icon />
                  <p class="text-sm">{item.title}</p>
                </div>
              ))}
            </div>
          </div>
          <div class="flex gap-2 xl:gap-4 mt-5 lg:mt-7">
            <a
              class="p-2 flex gap-2 border border-blue-600 w-fit rounded"
              href={project.code}
            >
              <GitHub />
              Ver codigo
            </a>
            <a
              class="p-2 flex gap-2 border border-blue-600 w-fit rounded"
              href={project.preview}
            >
              <Eye />
              Live preview
            </a>
          </div>
        </div>
      </div>
    ))
  }
</section>
