---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Email from "./icons/Email.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import SocialMediaButton from "./SocialMediaButton.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="mt-20 px-4 mx-auto max-w-5xl lg:mt-40" id="projects">
  <div class="grid grid-cols-2 gap-8 items-center">
    <div>
      <h1 class="text-balance text-xl font-bold tracking-tight sm:text-3xl">
        {t("contact.title")}
      </h1>
      <h2 class="font-bold text-xl leading-snug mt-10">
        {t("contact.subtitle")}
      </h2>
      <p class="mt-3">
        {t("contact.description")}
      </p>
      <div class="flex gap-4 mt-10">
        <SocialMediaButton href="https://www.linkedin.com/in/deyvi-tabora">
          <LinkedIn />
          LinkedIn
        </SocialMediaButton>
        <SocialMediaButton href="mailto:taborapaz@gmail.com">
          <Email />
          Email
        </SocialMediaButton>
      </div>
    </div>
    <form action="#" method="POST" class="mx-auto mt-16 max-w-xl sm:mt-20">
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <label for="first-name" class="block text-sm/6 font-semibold">
            {t("contact.form.firstName")}
          </label>
          <div class="mt-2.5">
            <input
              type="text"
              name="first-name"
              id="first-name"
              autocomplete="given-name"
              class="block w-full rounded-md bg-gray-800 px-3.5 py-2 text-base outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-[#0e7490]"
            />
          </div>
        </div>
        <div>
          <label for="last-name" class="block text-sm/6 font-semibold">
            {t("contact.form.lastName")}
          </label>
          <div class="mt-2.5">
            <input
              type="text"
              name="last-name"
              id="last-name"
              autocomplete="family-name"
              class="block w-full rounded-md bg-gray-800 px-3.5 py-2 text-base outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-[#0e7490]"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="company" class="block text-sm/6 font-semibold">
            {t("contact.form.company")}
          </label>
          <div class="mt-2.5">
            <input
              type="text"
              name="company"
              id="company"
              autocomplete="organization"
              class="block w-full rounded-md bg-gray-800 px-3.5 py-2 text-base outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-[#0e7490]"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="email" class="block text-sm/6 font-semibold">
            {t("contact.form.email")}
          </label>
          <div class="mt-2.5">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              class="block w-full rounded-md bg-gray-800 px-3.5 py-2 text-base outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-[#0e7490]"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="message" class="block text-sm/6 font-semibold">
            {t("contact.form.message")}
          </label>
          <div class="mt-2.5">
            <textarea
              name="message"
              id="message"
              rows="4"
              class="block w-full rounded-md bg-gray-800 px-3.5 py-2 text-base outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-[#0e7490]"
            ></textarea>
          </div>
        </div>
      </div>
      <div class="mt-10">
        <button
          type="submit"
          class="w-full py-2 text-sm lg:text-lg font-semibold leading-tight inline-block rounded-lg border border-transparent bg-gradient-to-r from-[#0e7490] via-[#3b82f6] to-[#4f46e5]
        transition delay-150 duration-100 ease-in-out hover:-translate-y-1 hover:scale-105 hover:from-[#4f46e5] hover:to-[#0e7490] hover:shadow-md hover:shadow-[#3b82f6]/60"
          >{t("contact.buttom")}</button
        >
      </div>
    </form>
  </div>
</section>
